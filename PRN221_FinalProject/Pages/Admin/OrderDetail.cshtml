@page
@model PRN221_FinalProject.Pages.Admin.OrderDetailModel
@{
    Layout = "_NavLayout";
}

<h1 style="margin-top: 30px">Order Details</h1>

<form method="post" asp-route-id="@Model.orderId">
    <div class="form-group">
        <label for="productName">Customer Name:</label>
        <input type="text" class="form-control" id="productName" asp-for="Order.Customer.FullName" readonly>
    </div>

    <div class="form-group">
        <label for="productName">Order Date:</label>
        <input type="text" class="form-control" id="productName" asp-for="Order.OrderDate" readonly>
    </div>

    <div class="form-group">
        <label for="productName">Ship Address:</label>
        <input type="text" class="form-control" id="productName" asp-for="Order.ShipAddress" readonly>
    </div>

    <div class="form-group">
        <label for="productName">Phone:</label>
        <input type="text" class="form-control" id="productName" asp-for="Order.Phone" readonly>
    </div>

    <div class="form-group">
        <label for="productName">Quantity:</label>
        <input type="text" class="form-control" id="productName" asp-for="Details.Quantity" readonly>
    </div>

    <div class="form-group col-md-6">
        <label for="productName">Ship Company:</label>
        <select name="ddlCategory" class=" form-control">
            @foreach (var item in Model.ShipCompanies)
            {
                <option value="@item.CompanyId">@item.CompanyName</option>
            }
        </select>

    </div>
    <button style="margin-top:20px" type="submit" class="btn btn-primary">Save</button>
</form>