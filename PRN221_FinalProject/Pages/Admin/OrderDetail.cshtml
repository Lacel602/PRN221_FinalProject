    <div class="form-group col-md-6">
        <label for="productName">Product Name:</label>
        <input type="text" class="form-control" id="productName" value="@Model.Details.Product.ProductName" readonly>
    </div>

    <div class="form-group col-md-6">
        <label for="productName">Quantity:</label>
        <input type="text" class="form-control" id="productName" value="@Model.Details.Quantity" readonly>
    </div>

    <div class="form-group col-md-6">
        <label for="productName">Ship Company:</label>
        <select name="ddlCategory" class=" form-control">
            @foreach (var item in Model.ShipCompanies)
            {
                <option value="@item.CompanyId">@item.CompanyName</option>
            }
        </select>

    </div>

    <div class="form-group col-md-6">
        <label for="productName">Shiping time estimate:</label> </br>
        <input class=" form-control" type="date" id="shipdate" name="shipdate">
    </div>
    <div class="form-group col-md-6">
        <label for="productName">Status:</label>
        <select name="ddlCategory" class=" form-control">
            <option value="Approve">Approve</option>
            <option value="Approve">Reject</option>
        </select>

    </div>
    <button style="margin-top:20px" type="submit" class="btn btn-primary">Save</button>
</form>


